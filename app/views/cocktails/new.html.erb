<div class="container">

  <h1>Ajouter un cocktail</h1>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</div>
