<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 500, height: 300, crop: :fill %>
<% end %>

<h3>Doses :</h3>

<ul>
  <% @doses.each do |dose| %>
    <!-- la dose se crée quand même dans le formulaire même si on remplit pas tout et .persisted va filter cette dose -->
    <% if dose.persisted? %>
      <li>
        <%= dose.ingredient.name %> - <%= dose.description %>
        <%= link_to "delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  <% end %>
</ul>

<div class="container">

  <h3>Ajouter une dose</h3>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= render "doses/form", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

</div>



