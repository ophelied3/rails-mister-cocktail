<div class="container">
  <h1>Liste des cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo? %>
          <%= cl_image_tag cocktail.photo.path, width: 250, height: 250, crop: :fill, class: "card-image" %>
        <% end %>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
    <% end %>
  </div>
</div>


